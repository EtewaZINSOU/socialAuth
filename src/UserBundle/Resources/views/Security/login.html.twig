{% extends "UserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="row">
        <form action="{{ path("fos_user_security_check") }}" method="post" class="col s12">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <div class="row">
                <div class="input-field col s4 offset-s4">
                    <i class="material-icons prefix">contact_mail</i>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"  class="validate"/>
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                </div>
                <div class="input-field col s4 offset-s4">
                    <i class="material-icons prefix">enhanced_encryption</i>
                    <input type="password" id="password" name="_password" required="required"  class="validate"/>
                    <label for="password">{{ 'security.login.password'|trans }}</label>

                    OU
                </div>
             </div>

            <div class="row">
                <div class="col s4 offset-s4">
                    <a  href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }} " class="waves-effect waves-light btn"><i class="material-icons left">cloud</i>Facebook</a>
                </div><br><br>
                <div class="col s4 offset-s4">
                    <a  href="{{ path('hwi_oauth_service_redirect', {'service': 'google' }) }}" class="waves-effect waves-light btn"><i class="material-icons left">cloud</i>Google</a>
               </div>

            </div>

            <div class="row">
                <div class="col s4 offset-s5">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div><br><br><br/>
                <div class="col s4 offset-s5">
                    <button class="btn waves-effect waves-light centered" type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}
                        <i class="material-icons right">send</i>
                    </button>
                 </div>
            </div>


        </form>
</div>
{% endblock fos_user_content %}
